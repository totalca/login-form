doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="stylesheet", href="style.css")
    title Sign Up Form
  body#login__form
    .login__box
      .login__logo
        p.logo__center
          img(src='asset/image/logo.png', alt='logo')
      form
        input.form__box(type='text', placeholder='Username' required)
        input.form__box(type='email', placeholder='Email' required)
        input.form__box(type='password', placeholder='Password' required)
        input.btn.btn__action(type='submit', value='SIGN UP')
      a.form__action(href='#', title='Login')
        p Have an account?